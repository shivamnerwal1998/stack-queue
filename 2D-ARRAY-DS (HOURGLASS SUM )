int hourglassSum(int arr_rows, int arr_columns, int** arr) {
    int i,j;
    int sum=0 , max=-100000 ;
    for(i=0 ; i<=3 ; i++)
    {
        for(j=0;j<=3;j++)
        {
            sum=sum+arr[i][j]+arr[i+2][j];
            sum=sum+arr[i][j+1]+arr[i+2][j+1];
            sum=sum+arr[i][j+2]+arr[i+2][j+2];
            sum=sum+arr[i+1][j+1];
            if(sum>max)
                max=sum;
            sum=0;
            
        }
    }
    return max;

}
